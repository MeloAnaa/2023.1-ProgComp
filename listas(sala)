import random

lista = list()
#usando for
for i in range(10000):
    lista.append(random.randint(100, 10000))
    
#usando while
contador = 1
while contador <= 10000:
    lista.append(random.randint(100,10000))
    contador += 1 

#usando lc
lista = [random.randint(100,10000) for _ in range(10000)]


import sds ------------------------> baixar file 'valores' do professor

qt_elementos = len(sds.lista)
print(f"\n A lista posssui {qt_elementos} elementos")

lista_pares = list()
lista_impares= list()

#percorrer cada elemento da lista e se o elemento for 
# par eledevera ser adicionado a lista_pares e se for 
#impar ele devera ser adicionado a lista_impares


for x in sds.lista:
    if (x % 2==0):
        lista_pares.append(x)
else:
    lista_impares.append(x)

print(f"\n na lista pares possui {len(lista_pares)} elementos")
print(f"\n na lista impares possui {len(lista_impares)} elementos ")


   #maneira mais facil de adicionar valores a lista

import sds

valor = int(input("digite um valor inteiro:"))

if valor in sds.lista:
    print(f"o valor {valor} esta na lista...")
    ocorrencias = sds.lista.count(valor)
    print(f"o {valor} aparece {ocorrencias} vezes  ")
else:
    print(f" o valor {valor} nao esta na lista...")



'''usando for'''

msg = input('digite uma mensagem')
nova_msg = ' '
for letra in msg:
    if letra == ' ':
        nova_msg += '\n'
    else:
        nova_msg += letra
        print(nova_msg)

    
'''usando while'''
frase = input('digite uma frase:')
palavra = ''
indice = 0

while indice < len(frase):
    if frase[indice] == " ":
        palavra += "\n"
        print(palavra)
        
    else:
   
        palavra += frase[indice]
    indice += 1

print(palavra)



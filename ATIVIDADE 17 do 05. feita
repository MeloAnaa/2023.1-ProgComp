
'''usando for'''

frase = 'eu sou de natal'

for letra in frase:
    if letra == "e":
        print('eu')
    elif letra == "s":
        print("sou")
    elif letra == "d":
        print('de')
    elif letra == "n":
        print("natal") 

    
'''usando while'''
frase = 'eu sou de natal'
palavra = ''
indice = 0

while indice < len(frase):
    if frase[indice] == " ":
        palavra += "\n"
        print(palavra)
        
    else:
   
        palavra += frase[indice]
    indice += 1

print(palavra)



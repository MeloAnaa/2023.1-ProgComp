#explicar e simplificar codigo

#def declara uma funcao, os argumentos vao em ()  impottante usar return

nmr = int(input("digite um numero:"))

def digito(nmr):
    i=0
    while nmr >0:
        nmr //= 10
        i+=1

    return i

def soma(nmr):
    i = digito(nmr)
    s = 0

    while nmr > 0:
        digit = nmr %10
        nmr//= 10
        s += pow(digit, i)

        return s 

s = soma(nmr)
if s == nmr:
    print("é um numero armstrong")
else:
        print("nao é um nmr armstrong")

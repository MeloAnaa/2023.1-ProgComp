frase = str(input("Digite uma frase para verificar se é um palíndromo: "))

frase = frase.replace(' ', '').replace('-', '')  # Remover espaços e o caractere '-' da frase

if frase.lower() == frase.lower()[::-1]:  # Verificar se a frase é um palíndromo
    print("É um palíndromo.")
else:
    print("Não é um palíndromo.")

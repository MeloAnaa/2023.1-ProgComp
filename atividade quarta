import os

# Obtendo o diretÃ³rio do programa
dirApp = os.path.abspath(__file__)
dirApp = os.path.dirname(dirApp) 

# Abrindo o arquivo de input em modo somente de leitura
arq_input = open(dirApp + '\\servidores_ifrn.csv', 'r', encoding='utf-8')

# Lendo a linha de cabecalho
lstCabecalhos = list()
lstCabecalhos.extend(arq_input.readline()[:-1].split(';'))

# Lendo as linhas de dados
dictServidores = dict()
while True:
    linha = arq_input.readline()[:-1]
    if not linha: break
    linha = linha.split(';')
    dictServidores[linha[9]] = dict(zip(lstCabecalhos,linha))

# Fechando o arquivo de input
arq_input.close()


filtro = lambda f:[1] ['categoria'] == 'docente'
dictdocentes = dict()
dictdocentes = dict(filter(filtro,dictdocentes.items())) 



#atividade 
#saida:    nome|       matricula |    campus  |   todos aninhados. 

#aninhamento de strings :
#print(f'{nome > x
              < x
#obs: entre o nome e a matricula o espaco precisa ser 10

#como resolver:
      
max_caract = 0
for x in dictdocentes.items():
     if len(x['nome']) > max_caract:
      max_caract = len(x['nome'])   




